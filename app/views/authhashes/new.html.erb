<!-- Validation failure messages -->
<% if @authhash.errors.any? %>
  <% @authhash.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Add Authhash</h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/create_authhash" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for provider -->
      <div class="form-group">
        <label for="provider" class="control-label">
          Provider
        </label>

        <input type="text" id="provider" name="provider" placeholder="Provider" class="form-control" value="<%= @authhash.provider %>">
      </div>

      <button class="btn btn-success">
        Create Authhash
      </button>
      or
      <a href="/authhashes">Cancel</a>
    </form>
  </div>
</div>
